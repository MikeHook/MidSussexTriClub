@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Home>
@{
    Layout = "Master.cshtml";
}

<!-- Homepage Slider -->
<div class="homepage-slider">
    <div id="sequence">
        <ul class="sequence-canvas">
            <!-- Sliders -->

            @Html.Partial("~/Views/Partials/HomeSlider.cshtml", new MSTC.Web.Model.Partials.SliderModel
             {
                 LinkUrl = Model.Content.SliderLinks.FirstOrDefault()?.Url ?? "",
                 CssClass = "bg-velodrome",
                 LinkText = "Sign up to the club",
                 SubText = "If you want to get more involved with trialthon why not become a member of the club?"
             })

            @Html.Partial("~/Views/Partials/HomeSlider.cshtml", new MSTC.Web.Model.Partials.SliderModel
             {
                 LinkUrl = Model.Content.SliderLinks.LastOrDefault()?.Url ?? "",
                 CssClass = "bg-running",
                 LinkText = "Try our training sessions",
                 SubText = "Come down to our weekly group training session on Thursday and have a go!"
             })

            @if (Model.Content.EventEntryEnabled)
            {
                <li class="bg-pool">
                    <div class="transbox">
                        <h2 class="title"><a href="https://midsussextriathlon.com/" target="_blank">Enter the Mid Sussex Triathlon</a></h2>
                        <h3 class="subtitle">Entries for the Mid Sussex Triathlon are now open!</h3>
                    </div>
                </li>
            }
            <!-- End Sliders -->
        </ul>
        <div class="sequence-pagination-wrapper">
            <ul class="sequence-pagination">
                <li>1</li>
                <li>2</li>
                <li>3</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Homepage Slider -->

<div class="section home home-social">
    <div class="container">
        
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <div>
                    <h2>Our Club</h2>
                    @Model.Content.BodyText
                </div>
            </div>          
            <div class="col-md-4 col-sm-4">
                <div class="service-wrapper">
                    <a href="@(Model.Content.EventBookingPage?.Url)">
                        <img src="~/Images/mstc/service-icon/tt-icon-black-white-200.png" />
                    </a>
                    <p>Book a Training Session</p>
                </div>
                <div class="service-wrapper">
                    <a href="https://twitter.com/midsussextri">
                        <img src="/images/mstc/service-icon/twitter-200.png" alt="Twitter">
                    </a>
                    <p>Follow us on twitter</p>
                </div>
                <div class="service-wrapper strava">
                    <iframe height='160' width='300' frameborder='0' allowtransparency='true' scrolling='no'
                            src='https://www.strava.com/clubs/4400/latest-rides/c31b39d89697b004849504f93dc76a7ed63a69aa?show_rides=false'></iframe>
                </div>
                <div class="service-wrapper">
                    <a href="https://www.facebook.com/groups/2363043378/">
                        <img src="/images/mstc/service-icon/facebook-200.png" alt="Facebook">
                    </a>
                    <p>Our members facebook group</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section home">
    <div class="container">
        <div class="row">
            @if (Model.Content.RaceReportsPage != null)
            {
                @Html.Partial("~/Views/Partials/Blog/BlogMiniListing.cshtml", new MSTC.Web.Model.Partials.BlogMiniModel
                {
                    Title = "Latest race reports",
                    StartNodeId = Model.Content.RaceReportsPage.Id,
                    NumberOfPosts = 3
                })
            }
        </div>
    </div>
</div>

<div class="section home home-social">
    <div class="container">        
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="service-wrapper">
                    <a href="https://www.britishtriathlon.org/clubs/mid-sussex-triathlon-club_1202">
                        <img class="affiliation-logo" src="/images/mstc/trimark/te-affliated-club-white.jpg" alt="Triathlon England Affiliated Club" />
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="service-wrapper">
                    <a href="https://midsussextriclub.com/media/73341/trimark-club-bronze.pdf" target="_blank">
                        <img class="affiliation-logo" src="/images/mstc/trimark/trimark_club_bronze.png" alt="TriMark" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScripts {
    <script type="text/javascript" src="/scripts/mstc/jquery.sequence-min.js?v=1"></script>
    <script type="text/javascript" src="/scripts/mstc/jquery.bxslider.js"></script>
    <script type="text/javascript" src="/scripts/mstc/home-slider.js"></script>
}
