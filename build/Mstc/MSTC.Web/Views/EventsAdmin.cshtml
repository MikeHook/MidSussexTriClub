@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<EventsAdmin>

@{
	Layout = "Master.cshtml";
}
@section Header {
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.23/b-1.6.5/b-colvis-1.6.1/b-flash-1.6.5/b-html5-1.6.5/b-print-1.6.5/sl-1.3.1/datatables.min.css" />
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<link href="~/css/mstc/toastr.min.css" rel="stylesheet" />
}

@{ Html.RenderPartial("~/Views/Partials/SectionHeader.cshtml"); }

<div class="section">
	<div class="container edit-member">

		<form role="form" id="eventAdminForm" class="form-horizontal">
			<div class="row">
				<div class="col-sm-12">
					<div class="form-group">
						<div class="col-sm-7">
							<select class="form-control" id="eventType" name="eventType">
								<option value="-1">Select an event</option>
							</select>
						</div>
					</div>
				</div>
			</div>
		</form>

		<div class="blog-post blog-single-post">
			<div class="row">
				<div class="col-sm-12">
					<h3>Event slots</h3>
					<table id="event-slots-table" class="table table-condensed">
						<thead>
							<tr>
								<th>Event Date</th>
								<th>Participants</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="blog-post blog-single-post">
			<div class="row">
				<div class="col-sm-12">
					<h3 id="eventTitle"></h3>
					<table id="event-participants-table" class="table table-condensed">
						<thead>
							<tr>
								<th>Participant Name</th>
								<th>Race Distance</th>
								<th>Email</th>
								<th>Phone number</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="dialog-cancel" title="Cancel Member Booking">
	<p>Do you want to cancel the booking for <span id="eventMemberCancel"></span>?</p>
</div>

<div id="dialog-cancel-all" title="Cancel Event Booking">
	<p>Do you want to cancel all bookings for <span id="eventCancel"></span>?</p>
</div>

@section FooterScripts {
	<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script src="~/scripts/mstc/toastr.min.js"></script>
	<script type="text/javascript" src="/scripts/jsnlog.min.js"></script>
	<script src="/scripts/mstc/moment.min.js" type="text/javascript"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.23/b-1.6.5/b-colvis-1.6.1/b-flash-1.6.5/b-html5-1.6.5/b-print-1.6.5/sl-1.3.1/datatables.min.js"></script>

	<script type="text/javascript" src="~/scripts/mstc/event-admin.js"></script>
}