@model bool
@{
    ViewBag.Title = "Renew DD Mandate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section section-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Renew DD Mandate</h1>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container edit-member">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="help-block alert-danger">
                            @Html.ValidationSummary()
                        </div>

                        <p>Please try your action again and <a href="/the-club/contact-us">contact support</a> if the issue recurs </p>
                    }

                    @if (!Model)
                    {
                        <p>No pending payment request has been found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




