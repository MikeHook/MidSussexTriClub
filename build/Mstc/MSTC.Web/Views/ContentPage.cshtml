@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentPage>
@{
    Layout = "Master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

@if (!string.IsNullOrWhiteSpace(Model.Content.BodyText?.ToString()))
{
    <section class="section">
        <div class="container">
            <div class="blog-post blog-single-post">
                <div class="row">
                    <div class="col-sm-12">
                        @Model.Content.BodyText
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@if (!string.IsNullOrWhiteSpace(Model.Content.SecondaryContent?.ToString()))
{
    <section class="section">
        <div class="container">          
            @Model.Content.SecondaryContent
        </div>
    </section>
}