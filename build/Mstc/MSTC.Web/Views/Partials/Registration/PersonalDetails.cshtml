@inherits Umbraco.Web.Mvc.UmbracoViewPage<Mstc.Core.Domain.PersonalDetails>

<div class="personal-details">
    <div class="form-group">
        <h3 class="col-sm-12">Personal Details</h3>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FirstName, "Please enter your first name", new { @class = "help-block alert-danger" } )
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LastName, "Please enter your last name", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessage("Email", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "Please enter a password of at least 8 characters", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            <span class="radio">
                @foreach (var gender in Model.Genders)
                {
                    @Html.RadioButtonFor(m => m.Gender, gender.Item1, new { id = $"gender-{gender.Item1}" })
                    <span>&nbsp;</span>@Html.Label($"gender-{gender.Item1}", gender.Item2)
                    <br />
                }
            </span>
                @Html.ValidationMessageFor(m => m.Gender, "Please select your gender", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DateOfBirth, "Your date of birth must be in the format dd/mm/yyyy and you must be at least 16 years old at the time of registration", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address1, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address1, "Please enter your house number and street", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.City, "Please enter your town / city", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Postcode, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Postcode, "Please enter your postcode", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "Please enter your phone number", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BTFNumber, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.BTFNumber, new { @class = "form-control" })
        </div>
    </div>
</div>
<div class="emergency-details">
    <div class="form-group">
        <h3 class="col-sm-12">Emergency Details</h3>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MedicalConditions, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.MedicalConditions, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MedicalConditions, "Please enter your medical conditions, enter 'none' if you don't have any", new { @class = "help-block alert-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmergencyContactName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.EmergencyContactName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EmergencyContactName, "Please enter your emergency contact", new { @class = "help-block alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmergencyContactPhone, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.EmergencyContactPhone, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EmergencyContactPhone, "Please enter the phone number of your emergency contact", new { @class = "help-block alert-danger" })
        </div>
    </div>
</div>

