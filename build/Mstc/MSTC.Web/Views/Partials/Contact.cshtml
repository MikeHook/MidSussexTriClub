@inherits Umbraco.Web.Mvc.UmbracoViewPage<MSTC.Web.Model.ContactModel>
@using Umbraco.Web
@{

}

@if (TempData["Message"] != null)
{
    <p>@TempData["Message"]</p>
}
else
{
    using (Html.BeginUmbracoForm("Submit", "Contact", FormMethod.Post, new { id = "contact", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your name" })
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your email" })

            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Topic, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-7">
                @Html.EnumDropDownListFor(m => m.Topic, new { @class = "form-control" })

            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Message, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-7">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })

            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="help-block alert-danger">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <button name="login" type="submit" class="btn btn-yellow pull-right">Send Message</button>
            </div>
            <div class="col-sm-2"></div>
        </div>

    }
}
