@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var topBannerImage = Model.Content.GetPropertyValue<IPublishedContent>("TopBannerImage");

    string sectionClass = topBannerImage == null ? string.Format("class=\"section section-breadcrumbs\"") : string.Format("class=\"section section-breadcrumbs section-banner-image\"");
    string sectionStyle = topBannerImage == null ? "" : string.Format("style=\"background-image: url('{0}');\"", topBannerImage.Url);
    string heading = string.IsNullOrEmpty(Model.Content.GetPropertyValue("PageTitle") as string) ? Model.Content.Name : Model.Content.GetPropertyValue("PageTitle") as string;
}

<div @Html.Raw(sectionClass) @Html.Raw(sectionStyle)>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (topBannerImage != null)
                {
                    <div class="heading-transbox"><h1>@heading</h1></div>
                }
                else
                {
                    <h1>@heading</h1>
                }
            </div>
        </div>
    </div>
</div>