@inherits Umbraco.Web.Mvc.UmbracoViewPage<MSTC.Web.Model.ChangePasswordModel>
@using Umbraco.Web
@{

}

@if (TempData["Message"] != null)
{
    <p>@TempData["Message"]</p>
}
else
{
    using (Html.BeginUmbracoForm("ChangePassword", "Member", System.Web.Mvc.FormMethod.Post, new { id = "changepassword", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-7">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Current Password" })
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-7">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New Password" })
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="help-block alert-danger">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <button name="login" type="submit" class="btn btn-yellow pull-right">Submit</button>
            </div>
            <div class="col-sm-2"></div>
        </div>

    }
}
