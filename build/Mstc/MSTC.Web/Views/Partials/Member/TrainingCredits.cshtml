@inherits Umbraco.Web.Mvc.UmbracoViewPage<MSTC.Web.Model.Partials.TrainingCreditsModel>

    <div id="training-section" class="form-horizontal">
        <h2>Training and Events</h2>

        @using (Html.BeginUmbracoForm("CreditsPaymentRedirect", "MemberEdit", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-5 control-label"><b>Training credits</b></label>
                        <div class="col-sm-7">
                            <p id="credits" class="form-control-static">£@Model.CurrentTrainingCredits</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TrainingCreditsToBuy, new { @class = "col-sm-5 control-label" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.TrainingCreditsToBuy, new { @type = "number", @class = "form-control", @min = "1", @max = "50" })
                            @Html.ValidationMessageFor(m => m.TrainingCreditsToBuy, "Please enter between 1 and 50 credits", new { @class = "help-block alert-danger" })
                        </div>
                        <div class="col-sm-3">
                            <button name="buyCredits" id="buyCreditsButton" type="submit" class="btn btn-yellow">Buy now</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-sm-12">
                <p>If you would like to take part in training sessions or events please pre-book on the below page.</p>
                <p><a href="@Model.EventBookingPageUrl">Training & Event Booking</a></p>
            </div>
        </div>
    </div>



