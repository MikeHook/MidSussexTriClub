@inherits Umbraco.Web.Mvc.UmbracoViewPage<MSTC.Web.Model.Partials.MemberDetailsModel>

@using (Html.BeginUmbracoForm("MemberDetails", "MemberEdit", FormMethod.Post, new { id = "register", @class = "form-horizontal" }))
{
    <h2>Edit your details</h2>

    <div class="personal-details contact-form-wrapper">
        <div class="form-group">
            <h3 class="col-sm-12">Personal Details</h3>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "Please enter your name", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessage("Email", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Gender, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Gender, "Please select your gender", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DateOfBirth, "Your date of birth must be in the format dd/mm/yyyy and you must be at least 16 years old at the time of registration", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address1, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address1, "Please enter your house number and street", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.City, "Please enter your town / city", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Postcode, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Postcode, "Please enter your postcode", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "Please enter your phone number", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BTFNumber, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.BTFNumber, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="emergency-details">
        <div class="form-group">
            <h3 class="col-sm-12">Emergency Details</h3>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MedicalConditions, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.MedicalConditions, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MedicalConditions, "Please enter your medical conditions, enter 'none' if you don't have any", new { @class = "help-block alert-danger" })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmergencyContactName, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.EmergencyContactName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmergencyContactName, "Please enter your emergency contact", new { @class = "help-block alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmergencyContactPhone, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.EmergencyContactPhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmergencyContactPhone, "Please enter the phone number of your emergency contact", new { @class = "help-block alert-danger" })
            </div>
        </div>
    </div>
    <div class="service">
        <div class="form-group">
            <h3 class="col-sm-12">Promote a Service</h3>
        </div>
        <div class="form-group">      
            @Html.LabelFor(m => m.ShowService, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                <span class="checkbox">
                    @Html.CheckBoxFor(m => m.ShowService)                   
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ServiceWebsite, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.ServiceWebsite, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ServiceName, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ServiceImage, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.ServiceImage, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ServiceDescription, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextAreaFor(m => m.ServiceDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ServiceDescription, "Please enter a maximum of 200 characters", new { @class = "help-block alert-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
            <button name="save" type="submit" class="btn btn-yellow pull-left">Save changes</button>
        </div>
    </div>
        }

