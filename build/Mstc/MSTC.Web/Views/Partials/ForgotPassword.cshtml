@inherits Umbraco.Web.Mvc.UmbracoViewPage<MSTC.Web.Model.ForgotPasswordModel>
@using Umbraco.Web
@{ 
    
}

@using (Html.BeginUmbracoForm("ForgotPassword", "Member", System.Web.Mvc.FormMethod.Post, new { id = "forgotpassword", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-7">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", tooltip = "The email address you used to sign up to the website" })
        </div>
        <div class="col-sm-2"></div>
    </div>       
    <div class="help-block alert-danger">
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button name="login" type="submit" class="btn btn-yellow pull-right">Submit</button>
        </div>
        <div class="col-sm-2"></div>
    </div>

}
