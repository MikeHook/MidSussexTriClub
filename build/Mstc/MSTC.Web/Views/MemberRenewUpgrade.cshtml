@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.MemberRenewUpgrade>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
@section Header {
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}

@{ Html.RenderPartial("~/Views/Partials/SectionHeader.cshtml"); }

<div class="section">
	<div class="container edit-member">
		<div class="row">
			<div class="col-sm-12">
				@using (Html.BeginUmbracoForm("Renew", "Renew", FormMethod.Post, new { id = "renew", @class = "form-horizontal" }))
				{
					@Html.AntiForgeryToken()

					Html.RenderAction("RenewOptions", "Renew");
				}
			</div>
		</div>
	</div>
</div>

@section FooterScripts {
	<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script>
		$(document).ready(function () {
			$("input[name*='PersonalDetails.DateOfBirth']").datepicker({
				dateFormat: 'dd/mm/yy', changeMonth: true, changeYear: true, maxDate: +0, yearRange: "c-60:c+20", defaultDate: "-30y"
			});
		});</script>
}