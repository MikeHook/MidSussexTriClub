@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Blogpost>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var blogHome = Model.Content.AncestorsOrSelf("blog").LastOrDefault();
    var blogArchive = Model.Content.Siblings<Blogarchive>().FirstOrDefault();
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @Html.Partial("~/Views/Partials/Blog/SingleBlogPost.cshtml", new MSTC.Web.Model.Partials.SingleBlogPostModel
                {
                    Post = Model.Content,
                    ShowArchiveLink = true                 
                } )                              
            </div>   
        </div>
    </div>
</div>
