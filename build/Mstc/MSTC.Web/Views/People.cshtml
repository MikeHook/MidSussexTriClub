@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<People>

@{
    Layout = "Master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")


<section class="section">
    <div class="container">
        @if (Model.Content.BodyText != null)
        {
            <div class="row">
                <div class="col-sm-12">
                    @Model.Content.BodyText
                </div>
            </div>
        }
        @if (Model.Content.IsCoaching)
        {
            <div class="row service-wrapper-row">
                @foreach (Person person in Model.Content.Children)
                {
                    @Html.Partial("~/Views/Partials/Person/Coach.cshtml", person)
                }
            </div>
        }
        else
        {
            foreach (Person person in Model.Content.Children)
            {
                <div class="row service-wrapper-row">
                    @Html.Partial("~/Views/Partials/Person/Person.cshtml", person)
                </div>
            }
        }       
    </div>
</section>


@if (Model.Content.SecondaryContent != null)
{
    <section class="section">
        <div class="container">
            @Model.Content.SecondaryContent
        </div>
    </section>
}