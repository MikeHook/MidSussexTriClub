@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.People>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

@if (Model.Content.BodyText != null)
{
    <section class="section">
        <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        @Model.Content.BodyText
                    </div>
                </div>
                @foreach (ContentModels.Person person in Model.Content.Children)
                {
                    <div class="row service-wrapper-row">
                        <div class="col-sm-4">
                            <div class="service-image">
                                @if (person.IsHeadCoach == true)
                                {
                                    <div class="ribbon-wrapper">
                                        <div class="ribbon ribbon-yellow">Head Coach</div>
                                    </div>
                                }
                                <img src="@(person.Photo != null ? person.Photo.Url : "")" alt="@person.Name">
                                <h3>@person.Name</h3>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            @person.BodyText
                        </div>
                    </div>
                }            
        </div>
    </section>
}

@if (Model.Content.SecondaryContent != null)
{
    <section class="section">
        <div class="container">
            @Model.Content.SecondaryContent
        </div>
    </section>
}